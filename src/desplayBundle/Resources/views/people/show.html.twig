{% extends 'base.html.twig' %}

{% block body %}
    <h1>Person</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ person.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ person.name }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ person.lastName }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ person.position }}</td>
            </tr>
            <tr>
                <th>Arrival</th>
                <td>{{ person.arrival }}</td>
            </tr>
            <tr>
                <th>Departure</th>
                <td>{{ person.departure }}</td>
            </tr>
            <tr>
                <th>Info</th>
                <td>{{ person.info }}</td>
            </tr>
            <tr>
                <th>Stay</th>
                <td>{{ person.stay }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('people_index') }}"class="btn btn-primary">Back to the list</a>

    <a href="{{ path('people_edit', { 'id': person.id }) }}"class="btn btn-primary">Edit</a>

    {{ form_start(delete_form) }}
    <br>
        <input type="submit" value="Delete" class="btn btn-primary">
    {{ form_end(delete_form) }}

{% endblock %}
